<h1>Rent <%= @cat.name %>!</h1>

<table>
  <tr>
    <td>Sex</td>
    <td><%= @cat.sex %></td>
  </tr>
  <tr>
    <td>Age</td>
    <td><%= @cat.age %></td>
  </tr>
  <tr>
    <td>Color</td>
    <td><%= @cat.color %></td>
  </tr>
  <tr>
    <td>Description</td>
    <td><%= @cat.description %></td>
  </tr>
</table>
<br><br>
  <h2>Requests for this cat</h2>
  <ul>
    <% @cat.cat_rental_requests.order(:start_date).each do |request| %>
      <li> Start: <%= request.start_date %> End: <%= request.end_date %> <%= request.status %>
        <% if request.status == 'PENDING' %>
          <%= button_to "approve", approve_cat_rental_request_url(request.id), method: :get %>
          <%= button_to "deny", deny_cat_rental_request_url(request.id), method: :get %>
        <% end %>
          </li>
    <% end %>
  </ul>
